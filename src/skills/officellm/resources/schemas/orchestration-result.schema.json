{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://officellm.dev/schemas/orchestration-result.schema.json",
  "title": "OfficeLLM Orchestration Result",
  "description": "Output contract for the 5-stage agent-first DOCX workflow (inspect, edit, structural_verify, visual_verify, decide).",
  "type": "object",
  "required": [
    "schema_version",
    "stages_completed",
    "decision",
    "layout_risk",
    "risk_reason",
    "visual_checks_executed",
    "pages_checked",
    "missing_dependencies",
    "issues"
  ],
  "properties": {
    "schema_version": {
      "const": "1.0",
      "description": "Schema version identifier."
    },
    "stages_completed": {
      "description": "Ordered list of pipeline stages that were executed. Must follow the deterministic order: inspect → edit → structural_verify → [visual_verify] → decide.",
      "oneOf": [
        {
          "const": ["inspect", "edit", "structural_verify", "visual_verify", "decide"],
          "description": "Full pipeline including visual verification."
        },
        {
          "const": ["inspect", "edit", "structural_verify", "decide"],
          "description": "Pipeline with visual verification skipped (missing dependencies)."
        }
      ]
    },
    "decision": {
      "type": "string",
      "enum": ["pass", "fix", "abort"],
      "description": "Final pipeline decision. 'pass' = no issues, 'fix' = retryable errors found, 'abort' = unrecoverable problem."
    },
    "layout_risk": {
      "type": "boolean",
      "description": "True if any layout issue was detected OR visual checks could not run."
    },
    "risk_reason": {
      "type": ["string", "null"],
      "description": "Machine-readable reason for layout_risk (snake_case). Null when no risk."
    },
    "visual_checks_executed": {
      "type": "boolean",
      "description": "True if render-pages succeeded and page images were inspected."
    },
    "pages_checked": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of pages visually inspected. 0 if visual checks did not run."
    },
    "missing_dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "External tools that were unavailable (e.g. 'pdftoppm', 'libreoffice')."
    },
    "issues": {
      "type": "array",
      "items": { "$ref": "#/$defs/issue" },
      "description": "All issues detected across pipeline stages."
    },
    "structural_checks": {
      "$ref": "#/$defs/structural_checks",
      "description": "Optional structural verification data from stage 3."
    },
    "input_file": {
      "type": "string",
      "description": "Path to the input document."
    },
    "output_file": {
      "type": "string",
      "description": "Path to the output document (after edits)."
    }
  },
  "additionalProperties": false,

  "allOf": [
    {
      "if": {
        "properties": { "visual_checks_executed": { "const": false } },
        "required": ["visual_checks_executed"]
      },
      "then": {
        "properties": {
          "layout_risk": { "const": true },
          "missing_dependencies": { "minItems": 1 }
        }
      }
    },
    {
      "if": {
        "properties": {
          "issues": {
            "contains": {
              "properties": { "severity": { "const": "error" } },
              "required": ["severity"]
            }
          }
        },
        "required": ["issues"]
      },
      "then": {
        "properties": { "layout_risk": { "const": true } }
      }
    },
    {
      "if": {
        "properties": { "decision": { "const": "pass" } },
        "required": ["decision"]
      },
      "then": {
        "properties": {
          "issues": {
            "not": {
              "contains": {
                "properties": { "severity": { "const": "error" } },
                "required": ["severity"]
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": { "decision": { "enum": ["fix", "abort"] } },
        "required": ["decision"]
      },
      "then": {
        "properties": {
          "issues": {
            "contains": {
              "properties": { "severity": { "enum": ["error", "warning"] } },
              "required": ["severity"]
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "stages_completed": {
            "const": ["inspect", "edit", "structural_verify", "visual_verify", "decide"]
          }
        },
        "required": ["stages_completed"]
      },
      "then": {
        "properties": { "visual_checks_executed": { "const": true } }
      }
    },
    {
      "if": {
        "properties": {
          "stages_completed": {
            "const": ["inspect", "edit", "structural_verify", "decide"]
          }
        },
        "required": ["stages_completed"]
      },
      "then": {
        "properties": { "visual_checks_executed": { "const": false } }
      }
    }
  ],

  "$defs": {
    "issue": {
      "type": "object",
      "required": ["severity", "page", "type", "evidence"],
      "properties": {
        "severity": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "description": "Issue severity level."
        },
        "page": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "Page number where the issue was observed. Null if not page-specific."
        },
        "type": {
          "type": "string",
          "enum": [
            "pagination_drift",
            "table_overflow",
            "image_overlap",
            "image_misplacement",
            "header_footer_inconsistency",
            "line_wrap_overflow",
            "equation_clipping",
            "missing_content",
            "structural_mismatch",
            "other"
          ],
          "description": "Machine-readable issue category."
        },
        "evidence": {
          "type": "string",
          "description": "Human-readable description of the issue."
        }
      },
      "additionalProperties": false
    },
    "structural_checks": {
      "type": "object",
      "required": ["element_count_before", "element_count_after", "validation_passed"],
      "properties": {
        "element_count_before": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of structural elements before edit (from list-structure)."
        },
        "element_count_after": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of structural elements after edit (from list-structure)."
        },
        "validation_passed": {
          "type": "boolean",
          "description": "Whether 'validate' command passed without errors."
        }
      },
      "additionalProperties": false
    }
  }
}
